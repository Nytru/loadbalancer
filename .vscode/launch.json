// Настройки дебаггера, не в гитигнор потому что содержат аргументы запуска
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "loadbalancer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/loadbalancer/main.go",
            "args": [
                "--configuration",
                "${workspaceFolder}/configurations/development.v2.yaml"
            ]
        }
    ]
}
